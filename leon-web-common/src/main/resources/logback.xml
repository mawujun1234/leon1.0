<configuration>
  <appender name="jdbc" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %m%n</pattern>
    </encoder>
  </appender>
  <appender name="sqltiming" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>-----&gt; %d{yyyy-MM-dd HH:mm:ss.SSS} %m%n%n</pattern>
    </encoder>
  </appender>
  <appender name="connection" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %m%n</pattern>
    </encoder>
  </appender>
  <appender name="sql" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>-----&gt; %d{yyyy-MM-dd HH:mm:ss.SSS} %m%n%n</pattern>
    </encoder>
  </appender>
  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <Target>System.out</Target>
    <encoder>
      <pattern>%d{ABSOLUTE} %5p %c{1}:%L - %m%n</pattern>
    </encoder>
  </appender>
  <appender name="file" class="ch.qos.logback.core.FileAppender">
    <File>hibernate.log</File>
    <encoder>
      <pattern>%d{ABSOLUTE} %5p %c{1}:%L - %m%n</pattern>
    </encoder>
  </appender>
  
  <logger name="jdbc.connection" additivity="false" level="FATAL">
    <appender-ref ref="connection"/>
  </logger>
  
 
  <logger name="org.hibernate.engine.query" level="debug"/>
  <logger name="org.hibernate.SQL" level="debug"/>
  <logger name="jdbc.audit" additivity="false" level="INFO">
    <appender-ref ref="jdbc"/>
  </logger>
  <logger name="jdbc.sqlonly" additivity="false" level="DEBUG">
    <appender-ref ref="sql"/>
  </logger>
  
  <logger name="jdbc.resultset" additivity="false" level="OFF"/>
    <logger name="org.hibernate.cache" level="debug"/>
  <logger name="jdbc.sqltiming" additivity="false" level="DEBUG">
    <appender-ref ref="sqltiming"/>
  </logger>
  <logger name="org.hibernate.jdbc" level="debug"/>
  <logger name="org.hibernate" level="debug"/>
  <logger name="org.hibernate.transaction" level="debug"/>
  <logger name="org.hibernate.type" level="debug"/>
  <logger name="org.hibernate.tool.hbm2ddl" level="debug"/>
    <logger name="org.hibernate.pretty" level="debug"/>
  
  
  <logger name="com.ibatis" level="DEBUG">
  	<appender-ref ref="stdout" />  
  </logger>
  <logger name="org.apache.ibatis.jdbc.ScriptRunner" level="info"/>
  <logger name="java.sql.Statement" level="DEBUG"/>
  <logger name="com.ibatis.sqlmap.engine.impl.SqlMapClientDelegate" level="info"/>
  <logger name="java.sql.Connection" level="DEBUG"/>
  <logger name="java.sql.PreparedStatement" level="DEBUG"/>
  <logger name="com.ibatis.common.jdbc.SimpleDataSource" level="info"/>
  
  
 
  <root level="warn">
    <appender-ref ref="stdout"/>
    <appender-ref ref="file"/>
  </root>
</configuration>
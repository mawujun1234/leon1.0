<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<!-- mawujun qq:16064988 e-mail:16064988@qq.com-->
<mapper namespace="com.mawujun.panera.customer.FollowupRepository">

	<select id="remind" resultType="com.mawujun.panera.customer.Followup">
    	SELECT a.*,b.name as customer_name
	    FROM panera_Followup a,PANERA_CUSTOMER b
	    where a.CUSTOMER_ID =b.id and a.nextDate &lt;=#{nowDate}
		and a.nextHandled  &lt;&gt;'Y'
    </select>
    

	<!-- select语句的生成结束=============================================================================================== -->
</mapper>

